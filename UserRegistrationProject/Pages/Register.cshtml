@page
@model RegisterModel
@{
	ViewData["Title"] = "Home page";
}

<div class="text-center">
	<section class="vh-100">
		<div class="mask d-flex align-items-center h-100 gradient-custom-3">
			<div class="container h-100">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-12 col-md-9 col-lg-7 col-xl-6">
						<div class="card" style="border-radius: 15px;">
							<div class="card-body p-5">
								<h2 class="text-uppercase text-center mb-5">Register an account</h2>
								<form asp-antiforgery="true">
									<div class="form-outline mb-4">
										<input required type="email" id="email" asp-for="Email" class="form-control form-control-lg" />
										<label class="form-label" for="email">Your Email</label>
										<br/>
										<span style="color: red" asp-validation-for="Email"></span>
									</div>

									<div class="form-outline mb-4">
										<input required type="password" id="password" asp-for="Password" class="form-control form-control-lg" />
										<label class="form-label" for="password">Password</label>
										<br/>
										<span style="color: red" asp-validation-for="Password"></span>
									</div>

									<div class="form-outline mb-4">
										<input type="password" id="confirm-password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
										<label class="form-label" for="confirm-password">Confirm your password</label>
										<br/>
										<span style="color: red" asp-validation-for="ConfirmPassword"></span>
									</div>

									<div class="form-check  justify-content-center mb-5">
										<input class="form-check-input d-flex justify-content-around me-2"
											   type="checkbox"
											   asp-for="TOSAgreementAccepted"
											   id="tos" />
										<label class="form-check-label" for="tos">
											I agree all statements in <a asp-page="License" class="text-body"><u>Terms of service</u></a>
										</label>
										<br />
										<span style="color: red" asp-validation-for="TOSAgreementAccepted"></span>
									</div>

									<div class="d-flex justify-content-center">
										<button action type="submit" class="btn btn-primary btn-lg">Register</button>
									</div>
									<span style="color: green">@ViewData["Message"]</span>
									<span style="color: red">@ViewData["ErrorMessage"]</span>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
